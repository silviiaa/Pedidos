{% extends 'base.html.twig' %}

{% block title %}Ingresar sesión{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Estás registrado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
        </div>
    {% endif %}
    <div class="login">
        <h1 class="h3 mb-3 font-weight-normal">Por favor, inicia sesión</h1>
        <label for="inputUsername"><b>Usuario</b></label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus placeholder="Usuario">
        
        <label for="inputPassword"><b>Contraseña</b></label>
        <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Contraseña">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <br>
        <button class="btn btn-lg btn-primary" type="submit">Iniciar sesión</button>
        <br>
        <button class="btn btn-lg btn-primary" type="submit"><a href="register">Crear cuenta</a></button>
        
    </div>
</form>
{% endblock %}
