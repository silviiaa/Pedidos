{% extends 'base.html.twig' %}

{% block title %}Categoría{% endblock %}

{% block body %}
    <h1>Categoría</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Código de la categoría</th>
                <td>{{ categorium.codCat }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ categorium.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ categorium.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categoria_index') }}" class="volver">Volver a la lista</a>

    <a href="{{ path('categoria_edit', {'codCat': categorium.codCat}) }}" class="editar">Editar</a>

    {{ include('categoria/_delete_form.html.twig') }}
{% endblock %}
